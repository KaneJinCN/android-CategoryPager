<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.esecbox.view.cp.CategoryPager
        android:id="@+id/category_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.esecbox.view.cp.CategoryPagerNav
            android:id="@+id/category_pager_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.esecbox.view.cp.CategoryPagerContent
            android:id="@+id/category_pager_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.esecbox.view.cp.CategoryPager>

</LinearLayout>
